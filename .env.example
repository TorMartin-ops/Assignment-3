# Authentication System Environment Variables
# Copy this file to .env and update with your values

# Flask Secret Key (CRITICAL - Generate new one for production!)
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Encryption Salt (CRITICAL - Required for TOTP secret encryption!)
# Generate with: python3 -c "import secrets; print(secrets.token_hex(16))"
# Minimum 16 bytes (32 hex characters) required
ENCRYPTION_SALT=change-this-to-a-random-salt-in-production

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Database (SQLite - no configuration needed)
# DATABASE_URL=sqlite:///recipe_app.db

# Optional: External OAuth2 Provider (Google, GitHub, etc.)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional: Email for notifications (for production)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: haveibeenpwned API Key (for enhanced password checking)
# HIBP_API_KEY=your-api-key
